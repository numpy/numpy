>>> f1 = lambda x: x*x
\newline
>>> x = r_[-4:6:20j]
\newline
>>> y = piecewise(x,abs(x)<=3,[f1,0])+
piecewise(x,x>=0,[1,0])
\newline
>>> set_printoptions(precision=4); print y
